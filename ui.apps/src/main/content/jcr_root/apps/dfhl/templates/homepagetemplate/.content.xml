<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0"
          xmlns:jcr="http://www.jcp.org/jcr/1.0"
          jcr:description="DPLI Home Page Template"
          jcr:mixinTypes="[mix:lockable]"
          jcr:primaryType="cq:Template"
          jcr:title="DPLI Home Page Template"
          allowedPaths="[/content(/.*)?]"
          ranking="{Long}3">
    <jcr:content
        jcr:primaryType="cq:PageContent"
        sling:resourceType="dfhl/components/structure/page/homepagetemplate"
        cq:deviceGroups="[/etc/mobile/groups/responsive]"
        cq:designPath="/etc/designs/dfhl">
        <cq:responsive jcr:primaryType="nt:unstructured">
            <breakpoints jcr:primaryType="nt:unstructured">
                <phone jcr:primaryType="nt:unstructured" title="{String}Phone" width="{Decimal}768"/>
                <tablet jcr:primaryType="nt:unstructured" title="{String}Tablet" width="{Decimal}992"/>
                <desktop jcr:primaryType="nt:unstructured" title="{String}Desktop" width="{Decimal}1200"/>
            </breakpoints>
        </cq:responsive>
    </jcr:content>

</jcr:root>
